.recommend_index_data{
  margin:15rpx;
  font-size: 24rpx;
  height: 155rpx;
  display: inline-block;
	padding: 15px;
	background: #CCC;
	position: relative;
	background: radial-gradient(
		transparent 4px, 
		transparent 4px, 
		white 4px,
		white
	);
	background-size: 18px 18px;
	background-position: -9px -9px;
}

.recommend_index_data:after {
 content: '';
	position: absolute;
	left: 5px; top: 5px; right: 5px; bottom: 5px;
	box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.5);
	z-index: -1;
}

.recommend_index_data:before {
	content: '';
	position: absolute;
	bottom: 0; left: 0;
	font: bold 24px arial;
	color: white;
	opacity: 0.75;
	line-height: 100%;
	padding: 20px;
}

